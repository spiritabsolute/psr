{
	"config": {
		"sort-packages": true
	},
	"require": {
		"php": ">=7.1.0",
		"aura/router": "^3.1",
		"psr/http-message": "^1.0",
		"roave/security-advisories": "dev-master",
		"zendframework/zend-diactoros": "^1.7"
	},
	"autoload": {
		"psr-4": {
			"Framework\\": "src/Framework/",
			"App\\": "src/App/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^6.5"
	},
	"scripts": {
		"serve": "php -S 0.0.0.0:8080 -t public index.php",
		"test": "phpunit --colors=always"
	}
}
